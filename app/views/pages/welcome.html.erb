<div class="static">
	<div class="container">
	<%= render "nav" %> <!-- rendering nav --> 
		<div class="container-fluid" id="section2">
	   		<div class="row">
	   			<div class="col-md-12 text-center">
	   			 	<%= image_tag "http://i.imgur.com/UItAvIi.png", :id => "style_image" %>
	   			</div>
	   			 <div class="col-md-12 text-center">
					<%= form_tag trails_path, method: 'get', class: 'form-inline' do %>
						<div class="form-group">  <!--Ends Search Field-->
							<%= text_field_tag :location, nil, placeholder: 'Type an address, city, or zip code.', size: 33, class: 'form-control' %>
						</div> 
						<div class="form-group">  <!--Drop down menu for search-->
							<%= select_tag "activity", "
								<option value=''>Select an Activity</option>
								<option>hiking</option>
								<option>camping</option>
								<option>mountain biking</option>
								<option>caving</option>
								<option>snow sports</option>

								".html_safe, class: 'form-control' %>
						</div>
						<div class="form-group">
							<%= submit_tag "Search", class: "btn btn-default" %>
						</div>
					<% end %>
						<br>
							<p id="quote"></p>  <!--Random Quotes created by JavaScript-->
				</div>  <!--Ends Col-md-12-->

			</div>  <!--Endss Row-->
		</div>  <!--Section 2-->	

	<%= render 'footer' %>
	</div> <!--Ends Class Container-->
</div> <!--Ends Static-->

