
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Trail Mix</title>
</head>
    <body>

		<div class="jumbotron special">
		   <div class="container text-center">
		      <h1>Trail Mix!</h1>
						<%= form_tag root_path, method: 'get', class: 'form-inline' do %>
							 
							<div class="form-group">
								<%= text_field_tag :location, nil, placeholder: 'Type an address, city, or zip code.', class: 'form-control' %>
							</div>
							<div class="form-group">
								<%= select_tag "activity", "
								<option value=''>Select an Activity</option>
								<option>hiking</option>
								<option>camping</option>
								<option>mountain biking</option>
								<option>caving</option>
								<option>snow sports</option>

								".html_safe, class: 'form-control' %>
							</div>
							<div class="form-group">
								<%= submit_tag "Search", class: "btn btn-default" %>
							</div>
						
						<% end %>
			</div>
		</div>

	   			



		
	<div>
				<% if @response %>
					<% @response["places"].each do |places| %>

				    	<h2><%= "#{places["city"]}, #{places["state"]}" %></h2>

							<% places["activities"].each do |activity| %>
				          
					    	<ul>
						        <li><%= activity["name"] %></li>
						        <li><%= activity["description"] %></li>
						        <li><%= activity["activity_type_name"] %></li>
					        </ul>
					    <%= link_to "Details", trail: "#{activity['name']}", lat: "{places['lat']}", action: "index" %>

				    	<% end %>

					<% end %>
				<% end %>
				<% unless @trail.nil? %>
			<div class="container-fluid">
				<div class="row">
					<div class =".col-xs-12"><h1><%= @trail['places'][0]['name'] %></h1></div>
					<div><%= @trail['places'][0]['city'] %>, <%= @trail['places'][0]['state'] %></div>
					<div><%= @trail['places'][0]['activities'][0]['description'] %></div>
					<p class="lead">.Description: <%= @trail['places'][0]['description'] %></p>
				</div>
			</div>	
				<% end %>
<!-- 				<%= @responses %>
				<%= @name %> -->
				<% unless @instagram.nil? %>

					   <% @instagram.each do |instagram| %>

					   <%= image_tag instagram.images.standard_resolution.url %>

					   <% end %>

					<% end %>
</div>

    	<div id="map-canvas"> 

		</div>


    </body>
</html>

